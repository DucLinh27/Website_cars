{%extends 'base.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    <div class="form-group">
        <label for="Carname">Car_Name:</label>
        {{ form_widget(form.Carname,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Task name'
            }
        }) }}
        <div class="invalid-feedback">
            {{ form_errors(form.Carname) }}
        </div>
    </div>
    <div class="form-group">
        <label for="Carbrand">Brand :</label>
        {{ form_widget(form.Carbrand,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Category name'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="Carprice">Price :</label>
        {{ form_widget(form.Carprice,{
            'attr':{
                'class':'form-control',
                'placeholder': 'Category name'
            }
        }) }}
    </div>

    <input type="submit" name="create_car" value="Create" class="btn btn-primary"/>
    {{ form_end(form) }}
{% endblock %}
